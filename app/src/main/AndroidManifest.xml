<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.han.tartalk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ResetPasswordActivity"
            android:label="Reset Password" />
        <activity android:name=".MyHistoryActivity" />
        <activity
            android:name=".MyPostActivity"
            android:label="My Post"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyCommentActivity"
            android:label="My Comment"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up" />
        <activity
            android:name=".HomeActivity"
            android:label="Home" />
        <activity
            android:name=".UploadedImageActivity"
            android:label="Uploaded Image"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ChangePasswordActivity"></activity>
    </application>

</manifest>